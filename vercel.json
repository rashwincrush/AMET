{
  "version": 2,
  "buildCommand": "npm install && npm install tailwindcss postcss autoprefixer && node install-deps.js && npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "env": {
    "NEXT_PUBLIC_VERCEL_ENV": "production",
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_PATH": "src",
      "NEXT_PUBLIC_VERCEL_BUILD": "true"
    }
  }
} 